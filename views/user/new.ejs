<!DOCTYPE html>
<html>
  <head>
    <title>Sign up</title>
  </head>
  <body>
    <% include ../partials/header.ejs %>
    <div class="form-content">
      <form action="/user/new" method="post" class="text-form">
        <div class="form-header">
          <h1>Sign up</h1>
        </div>
        <input placeholder="UserName" name="username" class="text-form" size="100" required/>
        <input placeholder="Email" name="email"  class="text-form" size="100" required/>
        <input placeholder="Firstname" name="firstname" class="text-form" size="100" required/>
        <input placeholder="Lastname" name="lastname" class="text-form" size="100" required/>
        <input placeholder="Password" name="password" class="text-form" size="100" required/>
        <input class="button" type="submit" value="Create user"/>
      </form>
    </div>
  </body>
</html>
